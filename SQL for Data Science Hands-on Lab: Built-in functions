--Query A1
SELECT SUM(COST)
FROM PETRESCUE
;

--Query A2
SELECT SUM(COST) as SUM_OF_COST
FROM PETRESCUE
;

--Query A3
SELECT MAX(QUANTITY)
FROM PETRESCUE
;

--Query A4
SELECT AVG(COST)
FROM PETRESCUE
;

--Query A5
SELECT AVG(COST / QUANTITY)
FROM PETRESCUE
WHERE LCASE(ANIMAL) = 'dog'
;

--Query B1
SELECT ROUND(COST)
FROM PETRESCUE
;

--Query B2
SELECT DISTINCT LENGTH(ANIMAL)
FROM PETRESCUE
;

--Query B3
SELECT UCASE(ANIMAL)
FROM PETRESCUE
;

--Query B4
SELECT DISTINCT UPPER(ANIMAL)
FROM PETRESCUE
;

--Query B5
SELECT *
FROM PETRESCUE
WHERE LCASE(ANIMAL) = 'cat'
;

--Query C1
SELECT DISTINCT DAY(RESCUEDATE)
FROM PETRESCUE
WHERE LCASE(ANIMAL) = 'cat'
;

--Query C2
SELECT SUM(QUANTITY)
FROM PETRESCUE
WHERE MONTH(RESCUEDATE) = 5
;

--Query C3
SELECT SUM(QUANTITY)
FROM PETRESCUE
WHERE DAY(RESCUEDATE) = 14
;

--Query C4
SELECT (RESCUEDATE + 3 days)
FROM PETRESCUE
;

--QUERY C5
SELECT (CURRENT_DATE - RESCUEDATE)
FROM PETRESCUE
;
